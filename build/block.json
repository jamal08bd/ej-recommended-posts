{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "ej-blocks/ej-recommended-posts",
  "version": "0.1.0",
  "title": "Recommended Posts",
  "category": "widgets",
  "icon": "admin-post",
  "description": "Display a grid of user selected articles (Posts).",
  "keywords": [
    "recommended",
    "posts"
  ],
  "supports": {
    "html": false
  },
  "textdomain": "ej-recommended-posts",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "attributes": {
    "displayFeaturedImage": {
      "type": "boolean",
      "default": true
    },
    "selectedPostIds": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "default": []
    }
  }
}